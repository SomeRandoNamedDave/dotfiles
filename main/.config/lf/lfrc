# basics
set shell sh
set shellopts '-eu'
set ifs "\n"
set period 1

# display
set hidden off
set scrolloff 10
set drawbox
set ratios '1:1'
set icons
set promptfmt '[1;34m%w[0m%S[3;38;5;16mlf [0;38;5;17mï’ [0m'
set cursoractivefmt '[7m'
set cursorpreviewfmt '[7m'
set previewer preview

# window title
cmd on-cd &{{
    printf "]0;lf ($(pwd | sed "s|$HOME|~|"))\007" > /dev/tty
}}
on-cd

# sync/redraw
map <c-l> load

# use enter for shell commands
map <enter> shell

# better paging
# map i $bat --paging=always "$f"
map i $pager-preview "$f" | less -R

# execute current file (must be executable)
map x $$f
map X !$f

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

# custom edit command
map e $TERM=wezterm $EDITOR "$f"

# define a custom 'open' command
# This command is called when current file is not a directory. You may want to
# use either file extensions and/or mime types here. Below uses an editor for
# text files and a file opener for the rest.
cmd open ${{
    test -L $f && f=$(readlink -f $f)
    case $(file --mime-type $f -b) in
        text/*) TERM=wezterm $EDITOR $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

